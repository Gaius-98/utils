{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": "./packages",
    "paths":{
      "@t/*":["types/*"],
      "@/*":["packages/*"]
  },
    "declaration": true,
    "declarationDir":".",
  },
  "include": ["packages/**/*.ts", "packages/**/*.d.ts", "packages/**/*.tsx", "packages/**/*.vue","types/*.ts","types/*.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
